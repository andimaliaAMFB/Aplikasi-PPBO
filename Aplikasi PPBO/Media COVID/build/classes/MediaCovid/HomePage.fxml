<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<GridPane fx:controller = "MediaCovid.HPController"
          xmlns:fx = "http://javafx.com/fxml"
          alignment= "center" hgap= "10" vgap = "10">
    
    <Label text = "HOME PAGE" textFill = "red"
           GridPane.columnIndex = "0" GridPane.rowIndex = "0"/>
    
    <HBox GridPane.columnIndex="0" GridPane.rowIndex="1" spacing="20">
        <Button fx:id="btnLogin" text="Log In"
                textAlignment="CENTER"
                onAction="#handleButtonAction"/>
        <Button fx:id="btnAkun" text="Dashboard"
                textAlignment="CENTER"
                onAction="#handleButtonAction"/>
        <Label fx:id="AkunName" textFill = "red" />
    </HBox>
    <TableView fx:id="tvDataInformasi" GridPane.columnIndex="0"
                GridPane.rowIndex="2" maxHeight="150">
        <!--Kolom di dalam tabel-->
        <columns>
            <!--Kolom penulis-->
            <TableColumn fx:id="user" text="Penulis">
                <cellValueFactory>
                    <PropertyValueFactory property="user"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
        <columns>
            <!--Kolom informasi-->
            <TableColumn fx:id="info" text="Information" prefWidth="300">
                <cellValueFactory>
                    <PropertyValueFactory property="info"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    
    <Button GridPane.columnIndex="0" GridPane.rowIndex="3"
            fx:id="btnEXIT" text="EXIT"
            textAlignment="CENTER"
            onAction="#handleButtonAction"/> 
</GridPane>
